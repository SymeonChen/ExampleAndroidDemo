<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".xfermodeView.XfermodeMainFragment">

    <Button
            android:id="@+id/xfermode_btn_pie_support_open"
            android:text="Compatible Pie"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/xfermode_btn_pie_support_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="136dp"/>

    <Button
            android:id="@+id/xfermode_btn_pie_support_close"
            android:text="Incompatible Pie"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="@id/xfermode_btn_pie_support_open"
            app:layout_constraintStart_toEndOf="@id/xfermode_btn_pie_support_open"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />

    <com.symeonchen.demo.examples.xfermodeView.View.RoundBottomCornerImageView
            android:id="@+id/xfermode_img_round_bottom_corner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="#983"
            android:layout_width="200dp"
            android:layout_height="100dp"/>

    <TextView
            android:id="@+id/xfermode_tv_corner_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/xfermode_img_round_bottom_corner"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text=""/>

</androidx.constraintlayout.widget.ConstraintLayout>